$(document).ready(function(){   
$("#readmore").click(function(){
$(".hidden").fadeIn();
$("#readmore").fadeOut();
});
$("#readless").click(function(){
    $("#readmore").fadeIn();
});
});

$(document).ready(function(){
    $("form").submit(function(){
    
      if($("#name").val().length===0){
        alert ("Name is required");
        return false;
      }
      
      return true;
      
    })
  });